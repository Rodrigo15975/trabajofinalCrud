<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App12.Views.AboutPage"
             xmlns:vm="clr-namespace:App12.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">cyan</Color>
        </ResourceDictionary>
    </ContentPage.Resources> 
    <StackLayout>
        <BoxView Color="Cyan"
                 HorizontalOptions="Center" />
        <BoxView Color="Blue"
                 HorizontalOptions="Center" />
        <BoxView Color="red"
                 HorizontalOptions="Center" />
        <Switch IsToggled="False" />
        <Switch IsToggled="True" />
        <Switch IsToggled="True" />
        <Switch IsToggled="False" />
        <Slider Minimum="0" Maximum="100" MinimumTrackColor="Aqua"  />
        <Slider Minimum="0" Maximum="100" MinimumTrackColor="Aqua"  />
        <Slider Minimum="0" Maximum="100" MinimumTrackColor="Aqua"  />

        <DatePicker />
        <TimePicker />
        <ProgressBar Progress="0.5"></ProgressBar>


    </StackLayout>

</ContentPage>
